<p id="notice"><%= notice %></p>

<h1>Activites</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Metaclass</th>
      <th>Cours</th>
      <th>Groupe</th>
      <th>Periodhor</th>
      <th>Periodtache</th>
      <th>Prof</th>
      <th>Salle</th>
      <th>Listefoyers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activites.each do |activite| %>
      <tr>
        <td><%= activite.nom %></td>
        <td><%= activite.metaclass %></td>
        <td><%= activite.cours %></td>
        <td><%= activite.groupe %></td>
        <td><%= activite.periodHor %></td>
        <td><%= activite.periodTache %></td>
        <td><%= activite.prof %></td>
        <td><%= activite.salle %></td>
        <td><%= activite.listeFoyers %></td>
        <td><%= link_to 'Show', activite %></td>
        <td><%= link_to 'Edit', edit_activite_path(activite) %></td>
        <td><%= link_to 'Destroy', activite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

