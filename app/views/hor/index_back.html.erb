<body>


  <form id="listeMetaclasses" action="<% root_path %>" name="meta.txt" method="GET" >
  
    <% mc = obtenirMetaclasses %> 
 
 

    <div class="container" id="affiche">
      <div class="row">    
	<% x = 0 ; y = 0 %>
	<% until x > mc.size do %>
	  <% until y == 5  do %>
	    <% style, status = statusMetaclasse(mc[x]) if mc[x] %>
	    <div class="col-lg-2 ligneHaute">
	      <% if mc[x] %>
	      
	      
		<input  type="checkbox" value=<%= mc[x].nom %> id=<%= mc[x].nom %> name=<%= mc[x].nom %>
		  <%= status %> >
		  <text style=<%= style %> ><font size="4.5"><%= mc[x].nom %></font></text>
		</input> 
		
	      <% end ; x += 1; y += 1 %>
	    </div> 
	  <% end ; y = 0 %> 	
	<% end %> 
      </div>
      
    <input type="submit" form="listeMetaclasses" value="Valider les metaclasses choisies">
    </div>
  </form>


</body>