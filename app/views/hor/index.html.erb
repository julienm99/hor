<body>

<% mc = Metaclass.all.order(:nom)  %>  
<% puts Metaclass.count  %>  

  <div class="container">
    <div class="row">    
      <% x = 0 ; y = 0 %>
      <% until x > mc.size do %>
	<% until y == 5  do %>
	  <% style, status = statusMetaclasse(mc[x]) if mc[x] %>
	  <div class="col-lg-2 ligneHaute">
	    <% if mc[x] %>
	      <input type="checkbox" value=<%= mc[x].nom %> name=<%= mc[x].nom %> 
	      <%= status %> ></input>
	      <font size=4.5 <%= style %> ><%= mc[x].nom %>
	    <% end ; x += 1; y += 1 %>
	  </div> 
	<% end ; y = 0 %> 	
      <% end %> 
    </div>
  </div>

  


</body>